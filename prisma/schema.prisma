// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// 用户表
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // bcrypt 哈希后的密码
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  documents     Document[]
  tags          Tag[]
  collaborators DocumentCollaborator[]
}

// 文档表
model Document {
  id          String   @id @default(cuid())
  title       String   @default("无标题文档")
  content     String   @default("") @db.Text // Tiptap JSON 内容（转为字符串存储）
  userId      String   // 文档所有者
  isPublic    Boolean  @default(false) // 是否公开分享
  shareToken  String?  @unique // 分享链接的唯一 token
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user          User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags          DocumentTag[]
  versions      DocumentVersion[]
  collaborators DocumentCollaborator[]

  @@index([userId])
  @@index([shareToken])
}

// 标签表
model Tag {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#gray") // 标签颜色
  userId    String
  createdAt DateTime @default(now())

  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents DocumentTag[]

  @@unique([userId, name]) // 同一用户的标签名称唯一
  @@index([userId])
}

// 文档-标签关联表（多对多）
model DocumentTag {
  documentId String
  tagId      String
  createdAt  DateTime @default(now())

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  tag      Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([documentId, tagId])
}

// 文档版本历史表
model DocumentVersion {
  id         String   @id @default(cuid())
  documentId String
  title      String
  content    String   @db.Text // 历史版本的内容
  createdAt  DateTime @default(now())

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
}

// 文档协作者表（用于多人协作编辑）
model DocumentCollaborator {
  id         String   @id @default(cuid())
  documentId String
  userId     String
  permission String   @default("read") // "read" 或 "write"
  createdAt  DateTime @default(now())

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([documentId, userId]) // 同一用户在同一文档中只有一个权限
  @@index([documentId])
  @@index([userId])
}
